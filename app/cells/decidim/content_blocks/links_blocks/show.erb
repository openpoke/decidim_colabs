<section id="links-blocks" class="home__section">
  <div class="card__grid-home">
    <% (1..3).each do |num| %>
      <% next unless label(num).present? %>
      <%= link_to url(num), class: "card__grid shadow-none ring-0" do %>
        <div class="aspect-video"><%= image_tag image(num), class: "object-cover h-52 w-full" %></div>
        <div class="card__grid-text text-center"><%= label(num) %></div>
      <% end %>
    <% end %>
  </div>
</section>
